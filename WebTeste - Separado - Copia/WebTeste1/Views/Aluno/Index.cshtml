@model IEnumerable<Aluno>
@{
    ViewBag.Title = "Tabela de Alunos";
}

<div class="d-flex justify-content-between">
    <h1>Tabela de Alunos</h1>
    <input type="button" class="btn btn-dark" value="Adicionar aluno" onclick="location.href='@Url.Action("Create", "Aluno")'"/>    
</div>

<head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
</head>

<div class = "form-horizontal">
<hr />
    <form asp-controller="Aluno" asp-action="Index" method="get">
        <b> Opção de busca: </b> 
        <label for = "matricula">
            <input id = "matricula" name = "option" type = "radio" value = "Matricula" /> Matrícula
            @*@Html.RadioButton("option", "Matricula", false)<span> Matrícula</span>*@
        </label>
        <label for = "nome">
            <input id = "nome" name = "option" type = "radio" value = "Nome" /> Nome
        </label>
        @*@Html.RadioButton("option", "Nome", true) <span> Nome</span>*@
        <div id="divBusca">
            <input class = "form-control" placeholder = "Matrícula ou nome do aluno..." type = "text" name = "SearchString"/> <button id="btnBusca" class = "btn btn-dark">Buscar</button>
        </div>
    </form>
    <br />

<div style="overflow-x: auto;">
    <table class="table" id="tblAluno">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Matricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    Opções
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricula)
                    </td>
                    <td style = "text-align: left">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sexo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        <div class = "editarExcluir">
                            <a href = "@Url.ActionLink("Edit", "Aluno", new { item.Matricula })">
                                <button type="button" class="btn btn-dark">
                                    <i class="bi bi-pencil text-light"></i> Editar
                                </button>
                            </a>
                            <a href = "@Url.ActionLink("Delete", "Aluno", new { item.Matricula })">
                                <button type="button" class= "btn btn-danger">
                                    <i class="bi bi-trash text-white"></i> Excluir
                                </button>
                            </a>
                        </div>
                    </td>
                </tr>
            }        
        </tbody>
    </table>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js~/js/alunos.js"></script>